{
    "manifest_version": 3,
    "name": "Trust Wallet Extension",
    "version": "1.0",
    "description": "A Rust-based Trust Wallet browser extension",
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "avatar.png",
            "48": "avatar.png",
            "128": "avatar.png"
        }
    },
    "icons": {
        "16": "avatar.png",
        "48": "avatar.png",
        "128": "avatar.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}       