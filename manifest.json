{
    "manifest_version": 2,
    "name": "Rust Wallet Demo",
    "version": "1.0",
    "description": "Simple wallet demo using Rust and WebAssembly",
    "permissions": [],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "avatar.png",
            "48": "avatar.png",
            "128": "avatar.png"
        }
    },
    "icons": {
        "16": "avatar.png",
        "48": "avatar.png",
        "128": "avatar.png"
    },
    "web_accessible_resources": [
        "images/*"
    ],
    "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
} 